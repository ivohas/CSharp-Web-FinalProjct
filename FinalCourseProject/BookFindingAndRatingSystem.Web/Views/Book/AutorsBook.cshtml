@model IEnumerable<AllBookViewModel>
<div>
@foreach (var book in Model)
{    
    <div class="col-md-4">
        <div class="card mb-3">
            <img class="card-img-top" src="@book.ImageUrl" alt="Book  Image">
            <div class="card-body text-center">
                <h4>@book.Title</h4>
                
                <h6>
                    Price :
                    <b>@String.Format("{0:f2}", book.Price) EUR</b>
                </h6>
               
                <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id"
               class="btn btn-success">Details</a>                
            </div>
        </div>
    </div>    
    }   
</div>
