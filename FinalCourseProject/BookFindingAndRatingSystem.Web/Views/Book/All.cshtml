@model IEnumerable<AllBookViewModel>

@{
    ViewData["Title"] = "All books";

    var books = Model.ToList();
}
<div class="container">
    @if (books.Any())
    {
        <div class="row">
            @foreach (var book in books)
            {
                <div class="col-md-4">
                    <div class="card mb-2">
                        <img src="@book.ImageUrl" class="card-img-top" alt="Book Cover" width="200" height="650">
                        <div class="card-body">
                            <h5 class="card-title">@book.Title</h5>


                            <p class="card-text">Description: @book.Description</p>

                            <p class="card-text">Number of Pages: @book.Pages</p>


                            <p class="card-text">Average Rating: @book.Price</p>
                        </div>
                        <form class="input-group-sm" asp-controller="Book" asp-action="Details" asp-route-id="@book.Id">
                            <input type="submit" value="Details" class="fs-6 btn btn-success mb-3 p-2" />
                        </form>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>There are no books available.</p>
    }
</div>
