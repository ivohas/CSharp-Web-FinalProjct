@model IEnumerable<AllBookViewModel>

@{
    ViewData["Title"] = "All books";

    var books = Model.ToList();
}
<div class="container">
    @if (books.Any())
    {
        <div class="row">
            @foreach (var book in books)
            {
                <div class="col-lg-3 col-md-3 mb-4" style="max-height: 28rem;">
                    <div class="card">
                        <div class="" data-mdb-ripple-color="light" style="width: 12rem; height: 17rem;">
                            <div class="" style="width: 100%; height: 100%; display: flex; justify-content: center;">
                                <img src="@book.ImageUrl" class="img-fluid" style="object-fit: contain; width: 100%; max-height: 100%;" />
                            </div>
                            <a href="#!">
                                <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                            </a>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title">@book.Title</h5>
                            <p class="card-text">
                               Pages:  @book.Pages
                            </p>
                            <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id" class="btn btn-primary">Details</a>
                        </div>
                    </div>
                </div>

            }
        </div>
    }
    else
    {
        <p>There are no books available.</p>
    }
</div>
