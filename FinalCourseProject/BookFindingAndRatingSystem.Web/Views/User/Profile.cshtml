@using BookFindingAndRatingSystem.ViewModels
@model ProfileViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>User Profile</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <h1>Username:</h1>
                <h2 class="profile-name">@Model.UserName</h2>
                <h1>Email:</h1>
                <h2 class="profile-description">@Model.Email</h2>
                <div class="row mt-4">
                    <div class="col-md-12">
                        <h5>About You:</h5>
                        <p class="profile-about">@Model.About</p>
                        @if (@Model.About == null)
                        {
                            <a class="btn btn-primary" asp-controller="User" asp-action="EditAbout" asp-route-id="@Model.Id">Tell us something about you</a>
                        }
                        else
                        {
                            <a class="btn btn-primary" asp-controller="User" asp-action="EditAbout" asp-route-id="@Model.Id">Edit about you</a>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="profile">
                    <div class="row justify-content-center">
                        <div class="col-md-4">
                            <div class="profile-stat">
                                <div class="profile-stat-label">Books Read</div>
                                <div class="profile-stat-value">@Model.BooksToRead</div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-md-12">
                            <h5>Books Want to Read:</h5>
                            @if (Model.BooksWantToRead.Count != 0)
                            {
                                <ul class="list-group">
                                    @foreach (var book in Model.BooksWantToRead)
                                    {
                                        <li class="list-group-item">@book</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <h6>There are no books yet!</h6>
                            }
                        </div>
                    </div>
                    <div class="row mt-4 reading-challenge-form">
                        <div class="col-md-12">
                            <h5>Reading Challenge</h5>
                            <form>
                                <div class="form-group">
                                    <label for="reading-challenge">How many books do you want to read this year?</label>
                                    <input type="number" class="form-control" id="reading-challenge" placeholder="Enter a number">
                                </div>
                                <button type="submit" class="btn btn-success">Set Reading Challenge</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
