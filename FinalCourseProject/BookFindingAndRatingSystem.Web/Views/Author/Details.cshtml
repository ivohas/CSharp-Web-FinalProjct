@model AllAutorViewModel

@{
    ViewBag.Title = "Author Details";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <img class="card-img-top" style="width: 20rem;" src="@Model.ImageUrl" alt="Author Image">
        </div>
        <div class="card col-md-8 border-0">
            <h1>@Model.FirstName @Model.LastName</h1>
            <p>Birth Date: @Model.BirthDate.ToString("dd.MM.yyyy")</p>         
            <h3>Books:</h3>
           <a class="btn btn-primary" asp-controller="Book" asp-action="AutorsBook"
               asp-route-id="@Model.Id">Books writen by @Model.FirstName @Model.LastName</a>
            @if (true)
            {
                 <a class="btn btn-warning" asp-controller="Author" asp-action="Edit"
               asp-route-id="@Model.Id">Edit</a>
            }
        </div>
    </div>
</div>
